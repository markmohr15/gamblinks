<% if @comment.comment_votes_count != 0 %>
  var html = "<%= @comment.comment_votes_count + 1 %>";
 <% else %>
  var html = "1";
<% end %>

var container = $("#comment-<%= @comment_vote.comment.id %>");

container.find(".comment-votes-count").text(html)
container.find('.thumb').attr('disabled', true)
container.find('.thumb').attr('src', 'assets/thumb.png')
